{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

<div class="flex mt-2">
{% for user in users %}
    <div class="card ml-2 mt-2 flex" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ user.firstName }} {{ user.lastName }}</h5>
            <p class="card-text">Roles: {{ user.roles|json_encode }}</p>
            <p class="card-text">Address: {{ user.address }}</p>
            <p class="card-text">Postal Code: {{ user.postalCode }}</p>
            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">View</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">Edit</a>
            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

{% endfor %}

    <a class="btn btn-success" href="{{ path('app_user_new') }}">Cr√©er un utilisateur</a>

{% endblock %}
